{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 10",

  "compilerOptions": {
    
    "outDir": "dist",
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots" : ["./node_modules/@types", "./types"],
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,

    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}